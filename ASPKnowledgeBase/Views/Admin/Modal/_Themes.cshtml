@model IEnumerable<DataAccess.Entities.Theme>

<div id="editThemes">
    <table class="table table-bordered table-hover">
        <tr>
            <th>ID</th>
            <th>Тема</th>
            <th>Действие</th>
        </tr>
        @foreach (var theme in Model)
        {
            <tr>
                <td>@theme.Id</td>
                <td>@theme.Description</td>
                <td>
                    <button class="btn btn-xs btn-warning" title="Редактировать тему" onclick="showThemeModal(this, @theme.Id)">
                        <i class="glyphicon glyphicon-pencil"></i>
                    </button>
                    <button class="btn btn-xs btn-danger" title="Удалить тему" onclick="removeTheme(@theme.Id)">
                        <i class="glyphicon glyphicon-remove"></i>
                    </button>
                </td>
            </tr>
        }
    </table>
</div>