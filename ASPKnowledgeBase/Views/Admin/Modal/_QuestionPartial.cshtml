@model DataAccess.Entities.QuestionLine

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

@Html.HiddenFor(x => x.Id)

<div class="form-group">
    @Html.LabelFor(x => x.IsPublic, "Опубликовать", null)
    @Html.CheckBoxFor(x => x.IsPublic)
</div>

<div class="form-group">
    @Html.LabelFor(x => x.Answer, "Дать ответ", null)
    @Html.TextAreaFor(x => x.Answer, new { @class = "form-control", rows = 5 })
</div>



